<!-- Xml UI. See documentation: https://api.tabletopsimulator.com/ui/introUI/ -->
<Panel
	id='StartGameMenu'
  	active='true'
  	height = '50%'
  	width = '20%'
  	rectAlignment="MiddleRight"
>
	<Button
		onClick='setup'
		width='300'
		height='60'
		position='0 130 0'
		fontSize='20'
		fontStyle='Bold'
		id='setup'
	>
    	Iniciar
	</Button>

</Panel>

<Panel
	id='DrawMenu'
  	active='false'
  	height = '50%'
  	width = '20%'
  	rectAlignment="MiddleRight"
>
	<Text
	    fontSize='20'
	    fontStyle='Bold'
	    position='100% 200 0'
	    color= '#FFFFFF'
  	>
    	Comprar de onde?
  	</Text>
	<Button
		onClick='drawFromDeck'
		width='300'
		height='60'
		position='0 130 0'
		fontSize='20'
		fontStyle='Bold'
		id='drawFromDeck'
	>
    	Baralho
	</Button>
	<Button
		onClick='drawFromSecretAgent'
		width='300'
		height='60'
		position='0 70 0'
		fontSize='20'
		fontStyle='Bold'
		id='drawSecretAgent'
	>
    	Agente Secreto
	</Button>
</Panel>

